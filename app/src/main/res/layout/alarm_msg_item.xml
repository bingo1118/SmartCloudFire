<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    android:background="@drawable/nfc_devinfo_shape">

    <LinearLayout
        android:id="@+id/category_group_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/msg_contant_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1c1c1c"
                android:textSize="16sp"
                android:text="1502的烟感D56325698发生报警，请尽快处理！"/>

            <TextView
                android:id="@+id/msg_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/msg_contant_tv"
                android:textColor="#3c3c3c"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:text="类型:"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="16dp"
                android:id="@+id/msg_type"
                android:layout_toRightOf="@id/msg_type_tv"
                android:layout_alignTop="@id/msg_type_tv"
                android:background="@drawable/yanwu"/>

            <TextView
                android:id="@+id/address_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/msg_type_tv"
                android:textColor="#3c3c3c"
                android:textSize="14sp"
                android:text="地址:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_tv"
                android:layout_below="@id/msg_type_tv"
                android:layout_toRightOf="@id/address_name_tv"
                android:textColor="#3c3c3c"
                android:textSize="14sp"
                android:text="广东省广州市黄浦区"/>
            <TextView
                android:id="@+id/msg_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_tv"
                android:textColor="#3c3c3c"
                android:textSize="14sp"
                android:text="时间:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/msg_time"
                android:layout_alignTop="@id/msg_time_tv"
                android:layout_toRightOf="@id/address_name_tv"
                android:textColor="#3c3c3c"
                android:textSize="14sp"
                android:text="2018-08-16 16:16:18"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/msg_grade_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bjrw_jj"/>
                <TextView
                    android:id="@+id/msg_grade_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/msg_grade_image"
                    android:text="紧急"
                    android:textColor="#fe0000"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/msg_distance_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bjrw_jl"/>
                <TextView
                    android:id="@+id/msg_distance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/msg_distance_image"
                    android:text="&lt;1000m"
                    android:textColor="#505050"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/msg_deal_btn"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:padding="5sp"
                    android:background="#e53e16"
                    android:text="立即处理"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/msg_progress_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已处理"
                    android:textColor="#3681dd"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"/>
                <ImageView
                    android:id="@+id/msg_progress_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/msg_progress_tv"
                    android:background="@drawable/bjrw_ycl"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
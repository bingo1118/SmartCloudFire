<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/category_group_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/alarm_rela_zx_bg"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/group_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/yg_zj_zx"/>
            <TextView
                android:id="@+id/group_tv"
                android:layout_toRightOf="@id/group_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:text="11"
                />
            <TextView
                android:id="@+id/mac_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="123"
                android:layout_marginTop="3dp"
                android:textSize="14sp"
                android:layout_below="@+id/group_tv"
                android:layout_alignLeft="@+id/group_tv"
                android:layout_alignStart="@+id/group_tv" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/repeater_rela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/repeater_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#404040"
                android:layout_marginTop="10dp"
                android:text="所属中继："
                />
            <TextView
                android:id="@+id/repeater_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/repeater_tv1"
                android:layout_marginLeft="5dp"
                android:textColor="#404040"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/group_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#404040"
            android:layout_marginTop="10dp"
            android:text=""
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp">
            <RelativeLayout
                android:id="@+id/zjq_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/repeater_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:text="@string/repeater_name"/>
                <TextView
                    android:id="@+id/repeater_name_tv"
                    android:layout_toRightOf="@id/repeater_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:layout_marginLeft="5dp"
                    android:text=""/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/zjq_mac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/repeater_mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:text="@string/repeater_mac"/>
                <TextView
                    android:id="@+id/repeater_mac_tv"
                    android:layout_toRightOf="@id/repeater_mac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:layout_marginLeft="5dp"
                    android:text=""/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:text="@string/principal"/>
                <TextView
                    android:id="@+id/group_principal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_lin1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/category_group_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/yg_phone" />
                <TextView
                    android:id="@+id/group_phone1"
                    android:textColor="#404040"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:text="@string/principal"/>
                <TextView
                    android:id="@+id/group_principal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_lin2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/category_group_phone2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/yg_phone" />
                <TextView
                    android:id="@+id/group_phone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#404040"
                    android:text=""/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/right_image"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/sanj"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
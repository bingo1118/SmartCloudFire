<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3e7fda"
    android:orientation="vertical">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/main_srl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_name"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"
                    android:text="123"
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chanshuzhezhi_text"
                    android:text="参数设置"
                    android:textColor="#fff"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/update_time"
                android:gravity="center"
                android:textColor="#fff"
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/temperature_rela"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rectangle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/temperature_text"
                        android:text="--℃"
                        android:textSize="38sp"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@id/temperature_text">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/wendu"
                            android:layout_marginRight="5dp"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="温度"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/temperature_text"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#00ff0c"
                            android:text="Min"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="--℃"
                            android:id="@+id/t_low"
                            android:layout_marginRight="3dp"/>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#fff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff8f41"
                            android:text="Max"
                            android:layout_marginLeft="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="--℃"
                            android:id="@+id/t_top"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/temperature_rela"
                    android:orientation="horizontal"
                    android:id="@+id/temperature_yuzhi_set">
                    <TextView
                        android:id="@+id/test1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温度阈值设置"
                        android:textColor="#88dfff"
                        android:textSize="18sp" />
                    <ImageView
                        android:layout_toRightOf="@id/test1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/shezhi"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/humidity_rela"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rectangle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/humidity_text"
                        android:text="--%"
                        android:textSize="38sp"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@id/humidity_text">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/shidu"
                            android:layout_marginRight="5dp"/>
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="湿度"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/humidity_text"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#00ff0c"
                            android:text="Min"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="--%"
                            android:id="@+id/h_low"
                            android:layout_marginRight="3dp"/>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#fff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff8f41"
                            android:text="Max"
                            android:layout_marginLeft="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:text="--%"
                            android:id="@+id/h_top"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/humidity_rela"
                    android:id="@+id/humidity_yuzhi_set">
                    <TextView
                        android:id="@+id/test2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="湿度阈值设置"
                        android:textColor="#88dfff"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:layout_toRightOf="@id/test2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/shezhi"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>

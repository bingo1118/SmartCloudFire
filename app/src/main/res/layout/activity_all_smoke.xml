<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!-- title bar -->
    <include android:id="@+id/title_include" layout="@layout/title_bar_third"/>
    <!-- 数量显示 -->
    <!--<include android:id="@+id/search_include" layout="@layout/include_search"/>-->

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_include" />

    <TextView
        android:id="@+id/turn_map_btn"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/turn_to_map_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="查看地图"
        android:drawableLeft="@drawable/map"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#fff"/>
    <include layout="@layout/progress_bar"/>

</RelativeLayout>
